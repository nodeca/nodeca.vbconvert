applications:
  - nodeca.vbconvert

vbconvert:

  # Base url of the new forum;
  # used for quotes and snippet (topic, post) urls
  destination: 'https://dev.rcopen.com/'

  # Connection details for mysql
  database: 'mysql://root@localhost/vbforum'

  # Usergroup mapping
  usergroups:
    1: guests
    2: just_registered
    6: administrators
    7: { short_name: moderators, parent: members }
    8: banned
    10: { short_name: novices, parent: members }
    11: members
    12: { short_name: violators, parent: guests, force: true }
    13: che
    14: losers
    30: frozen

  # Path to the folder where attachments are stored in
  files: '/tmp/www/uploads/posts'

  # Path to the folder with avatar original pictures ("big" ones)
  avatars: '/tmp/www/custombigprofilepics'

  # Original smilies -> markdown-it smilies
  smiley_map:
    ':mellow:':        ':)' # ?
    ':o':              ':o'
    ';)':              ';)'
    ':P':              ':P'
    ':D':              ':grin:'
    ':lol:':           ':laughing:'
    'B)':              'B-)'
    ':rolleyes:':      ':unamused:'
    '-_-':             ':relieved:'
    ':)':              ':)'
    ':wub:':           ':heart_eyes:'
    ':(':              ':('
    ':unsure:':        ':)' # ?
    ':wacko:':         ':dizzy_face:'
    ':blink:':         ':)' # ?
    ':excl:':          ':exclamation:'
    ':devil:':         ':smiling_imp:'
    ':innocent:':      ':innocent:'
    ':bash:':          ':)' # ?
    ':angry:':         ':angry:'
    ':ninja:':         ':)' # ?
    ':blush:':         ':blush:'
    ':bleh:':          ':stuck_out_tongue_closed_eyes:'
    ':coffee:':        ':coffee:'
    ':megalol:':       ':joy:'
    ':haha:':          ':sweat_smile:'
    ':clap:':          ':)' # ?
    ':harhar:':        ':stuck_out_tongue_winking_eye:'
    ':licklips:':      ':yum:'
    ':gun_rifle:':     ':)' # ?
    ':drinks_cheers:': ':)' # ?
    ':cry:':           ':cry:'
    ':beer:':          ':)' # ?
    ':thumbsup:':      ':)' # ?
